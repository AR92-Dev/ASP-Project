    <script type="text/javascript">
        // When the theme switch button is clicked
        document.getElementById('btnSwitch').addEventListener('click', () => {
            let currentTheme = document.documentElement.getAttribute('data-bs-theme');

            // Toggle between dark and light themes
            if (currentTheme == 'dark') {
                document.documentElement.setAttribute('data-bs-theme', 'light');
                localStorage.setItem('theme', 'light');  // Save theme to localStorage
            } else {
                document.documentElement.setAttribute('data-bs-theme', 'dark');
                localStorage.setItem('theme', 'dark');  // Save theme to localStorage
            }
        });

        // Check the stored theme on page load and apply it
        window.addEventListener('DOMContentLoaded', () => {
            let savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                document.documentElement.setAttribute('data-bs-theme', savedTheme);  // Apply the saved theme
            } else {
                // If no theme is saved, default to dark
                document.documentElement.setAttribute('data-bs-theme', 'dark');
            }
        });
    </script>
   
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const inputs = document.querySelectorAll('.form-control-input'); // Select all input fields

            inputs.forEach(input => {
                // If the input has a value, add the 'notEmpty' class
                if (input.value.trim() !== '') {
                    input.classList.add('notEmpty');
                }

                // Add an event listener for focus and blur to handle dynamic behavior
                input.addEventListener('focus', function () {
                    this.classList.add('notEmpty');
                });

                input.addEventListener('blur', function () {
                    // If the input is empty after losing focus, remove the 'notEmpty' class
                    if (this.value.trim() === '') {
                        this.classList.remove('notEmpty');
                    }
                });
            });
        });
    </script>
