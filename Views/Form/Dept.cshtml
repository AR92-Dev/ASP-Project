@{
}
<style>
    .button-container {
        display: flex;
        gap: 10px;
    }

    .form-control-submit-button {
        flex: none;
    }
</style>


<div id="F_Item">
    <div id="contact" class="form-1 bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                    <!-- Contact Form -->
                    <form id="contactForm" method="post">
                        <div class="row">

                            <div class="col-lg-6">
                                <input type="radio" class="form-check-input" id="price1" name="dept" value="IT" required>
                                <label class="form-check-label" for="price1">IT</label>
                            </div>
                            <div class="col-lg-6">
                                <input type="radio" class="form-check-input" id="price2" name="dept" value="Pharmacy" required>
                                <label class="form-check-label" for="price2">Pharmacy</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control-input" id="cemail" name="phone" required>
                            <label class="label-control" for="cemail">Phone</label>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control-textarea" id="cmessage" required name="desc"></textarea>
                            <label class="label-control" for="cmessage">Description</label>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="button-container">
                                <button type="submit" class="form-control-submit-button ml-5" name="op" value="Max">Report</button>
                            </div>
                        </div>
                    </form>
                    <!-- end of contact form -->

                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </div>
</div>