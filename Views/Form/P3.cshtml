<style>
    .button-container {
        display: flex;
        gap: 10px;
    }

    .form-control-submit-button {
        flex: none;
    }

</style>
<div id="F_Item">
    <div id="contact" class="form-1 bg-gray">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">

                    <!-- Contact Form -->
                    <form id="contactForm" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control-input" id="cname" name="User" value="@ViewBag.name" required="" readonly>
                            <label class="label-control" for="cname">UserName</label>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control-input" id="cemail" name="PName" value="@ViewBag.PName" required="" readonly>
                            <label class="label-control" for="cemail">Product Name</label>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control-input" id="cname1" name="Price" value="@TempData["price"]" required="" readonly>
                            <label class="label-control" for="cname1">Price</label>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control-input" id="cemail2" name="Count" value="@TempData["count"]" required="" readonly="readonly">
                            <label class="label-control" for="cemail2">Count</label>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control-input" id="cemail5" name="Count" value="@TempData["total"]" required="" readonly>
                            <label class="label-control" for="cemail5">Total</label>
                        </div>

                    </form>
                    <!-- end of contact form -->

                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </div>
</div>
